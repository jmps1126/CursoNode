{{>header}}
{{>menu}}
<div class="container">
    <form action="/guardarCurso" method="post">
        <div class="form-group input-group">
            <input name="idcurso" class="form-control" value="{{idcurso}}"  placeholder="código del curso" type="number" required>
        </div>
        <div class="form-group input-group">
            <input name="nombre" class="form-control" value="{{nombre}}" placeholder="Nombre del curso" type="text" required>
        </div>
        <div class="form-group input-group">
            <input name="descripcion" class="form-control" value="{{descripcion}}" placeholder="Descripción del curso" type="text" required>
        </div>
        <div class="form-group input-group">
            <input name="valor" class="form-control" value="{{valor}}" placeholder="valor del curso" type="number" required>
        </div>
        <div class="form-group input-group">
            <select class="browser-default custom-select" name="modalidad">
                <option selected>Seleccione modalidad</option>
                <option value="1">Virtual</option>
                <option value="2">Presencial</option>
            </select>
        </div>
        <div class="form-group input-group">
            <input name="intensidad" class="form-control" value="{{intensidad}}"  placeholder="Intensidad horaria en horas" type="number">
        </div>

        <div class="form-group form-inline d-flex justify-content-center">
            <button type="submit" class="btn btn-primary">Guardar</button>
        </div>
    </form>
</div>
{{>footer}}